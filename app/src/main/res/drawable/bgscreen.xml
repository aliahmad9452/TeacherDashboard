<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when the view is pressed -->
    <item android:drawable="@drawable/pressed_background" android:state_pressed="true" />

    <!-- Background when the view is focused -->
    <item android:drawable="@drawable/focused_background" android:state_focused="true" />

    <!-- Default background -->
    <item android:drawable="@drawable/default_background" />
</selector>
