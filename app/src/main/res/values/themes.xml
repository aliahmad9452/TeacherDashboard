<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Admin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color for buttons, accents, etc. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:colorBackground">@color/background_color</item>

        <!-- Text and icon colors -->
        <item name="android:textColorPrimary">@color/text_primary_color</item>
        <item name="android:textColorSecondary">@color/text_secondary_color</item>

        <!-- AppBar/Toolbar color -->
        <item name="android:colorBackgroundFloating">@color/primary_color</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!-- Customize other components as needed -->
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/greenColor</item>
    </style>

    <!-- Define your colors -->
    <color name="primary_color">#3F51B5</color>
    <color name="primary_variant_color">#303F9F</color>
    <color name="secondary_color">#FF5722</color>
    <color name="secondary_variant_color">#E64A19</color>
    <color name="background_color">#FFFFFF</color>
    <color name="text_primary_color">#212121</color>
    <color name="text_secondary_color">#757575</color>

    <!-- Add more color resources as needed -->

    <!-- Define your drawable resources like button_background.xml for custom button backgrounds -->

</resources>
